<?xml version="1.0" encoding="utf-8"?>
<id2.id2me.com.id2launcher.itemviews.AppItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/drawer_grid_image"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/app_icon_size"
        />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/drawer_grid_text"
        android:textColor="@color/app_drawer_text_color"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="14sp" />

</id2.id2me.com.id2launcher.itemviews.AppItemView>
