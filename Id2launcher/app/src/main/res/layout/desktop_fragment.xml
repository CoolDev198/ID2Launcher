<?xml version="1.0" encoding="utf-8"?>




<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/blur_relative"
        layout="@layout/popup_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />



    <LinearLayout
        android:id="@+id/drop_target_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:background="@color/overlay"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/layout_remove"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher_clear_normal_holo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_uninstall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher_trashcan_normal_holo" />
        </RelativeLayout>

    </LinearLayout>



    <id2.id2me.com.id2launcher.ObservableScrollView
        android:id="@+id/container"
        android:layout_below="@id/drop_target_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_screen_color">

        <id2.id2me.com.id2launcher.CellLayout
            android:id="@+id/wallpaper_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_layout_height"
           >


            <ImageView
                android:id="@+id/wallpaper_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wallpaper_height"
                android:background="@mipmap/wallpaper"
                android:scaleType="centerCrop" />



            <android.support.v7.widget.RecyclerView
                android:id="@+id/noti_widget"
                android:layout_width="match_parent"
                android:layout_height="@dimen/noti_widget_height"
                android:layout_alignParentBottom="true"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/noti_widget_margin_top"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/drag_outline_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
        </id2.id2me.com.id2launcher.CellLayout>

    </id2.id2me.com.id2launcher.ObservableScrollView>


</RelativeLayout>

